{
	"name": "earth",
	"version": "1.0.0",
	"description": "Earthquakes",
	"private": true,
	"dependencies": {
		"bem-class-names": "mpk/bem-class-names#121f525",
		"bezier-easing": "2.0.3",
		"component-emitter": "1.2.1",
		"math": "mpk/math#bcb9309",
		"moment": "2.13.0",
		"node-polyglot": "2.0.0",
		"normalize.css": "4.1.1",
		"react": "15.0.2",
		"react-dom": "15.0.2",
		"react-redux": "4.4.5",
		"redux": "3.5.2",
		"redux-actions": "0.9.1",
		"redux-thunk": "2.0.1",
		"three": "0.76.1"
	},
	"devDependencies": {
		"babel-plugin-transform-runtime": "6.8.0",
		"babel-preset-es2015": "6.6.0",
		"babel-preset-react": "6.5.0",
		"babel-preset-stage-2": "6.5.0",
		"babel-runtime": "6.6.1",
		"babelify": "7.3.0",
		"brfs-babel": "1.0.0",
		"browserify": "13.0.0",
		"envify": "3.4.0",
		"eslint": "2.9.0",
		"eslint-plugin-react": "5.0.1",
		"got": "6.3.0",
		"jasmine-core": "2.4.1",
		"karma": "0.13.22",
		"karma-browserify": "5.0.4",
		"karma-jasmine": "0.3.8",
		"less": "2.6.1",
		"less-plugin-clean-css": "1.5.1",
		"less-plugin-glob": "1.1.1",
		"node-zopfli": "1.4.0",
		"uglify-js": "2.6.2",
		"watchify": "3.7.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mpk/earth"
	},
	"author": "mpk",
	"license": "MIT",
	"scripts": {
		"development": "npm run development:css && npm run development:js",
		"development:js": "browserify -e source/main.js -t brfs-babel -t babelify > build/build.js",
		"development:css": "lessc source/main.less --glob > build/build.css",

		"release": "npm run release:css && npm run release:js && node scripts/headers.js",
		"release:js": "browserify -e source/main.js -t brfs-babel -t babelify -g [ envify --NODE_ENV production ] | uglifyjs -m -c dead_code -o build/build.js",
		"release:css": "lessc source/main.less --glob --clean-css=\"--s0\" > build/build.css",

		"watch": "watchify source/main.js -t brfs-babel -t babelify -o build/build.js",

		"test": "karma start specs/support/options.js"
	},
	"babel": {
		"plugins": ["transform-runtime"],
		"presets": ["es2015", "react", "stage-2"]
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"jasmine": true
		},
		"globals": {
			"Promise": true,
			"Float32Array": true
		},
		"extends": ["eslint:recommended", "plugin:react/recommended"],
		"parserOptions": {
			"ecmaVersion": 7,
			"sourceType": "module",
			"ecmaFeatures": {
				"experimentalObjectRestSpread": true,
				"jsx": true
			}
		},
		"plugins": ["react"],
		"rules": {
			"arrow-parens": ["error"],
			"arrow-spacing": ["error"],
			"brace-style": ["error", "1tbs"],
			"camelcase": ["error"],
			"comma-spacing": ["error"],
			"computed-property-spacing": ["error"],
			"curly": ["error", "all"],
			"indent": ["error", "tab", { "SwitchCase": 1 }],
			"jsx-quotes": ["error", "prefer-double"],
			"key-spacing": ["error"],
			"keyword-spacing": ["error"],
			"linebreak-style": ["error", "unix"],
			"lines-around-comment": ["error"],
			"new-parens": ["error"],
			"newline-before-return": ["error"],
			"no-console": ["off"],
			"no-multiple-empty-lines": ["error", { "max": 1 }],
			"no-var": ["error"],
			"object-curly-spacing": ["error", "always"],
			"prefer-arrow-callback": ["error"],
			"prefer-rest-params": ["error"],
			"prefer-template": ["error"],
			"react/prop-types": ["off"],
			"quotes": ["error", "single"],
			"semi": ["error", "always"],
			"valid-jsdoc": ["error", {
				"prefer": {
					"return": "return"
				},
				"requireReturn": false,
				"requireParamDescription": false,
				"requireReturnDescription": false
			}]
		}
	}
}